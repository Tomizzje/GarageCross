<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tomizzje.garagecross">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_fitness_center_white"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >


        <activity android:name=".activities.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />

            </intent-filter>
        </activity>

        <activity android:name=".activities.InsertExerciseActivity"
                   android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name=".activities.TimerActivity">

        </activity>
        <activity android:name=".activities.DoneExerciseListActivity">

        </activity>
        <activity android:name=".activities.WeightLiftingDiaryActivity">

        </activity>
        <activity android:name=".activities.InsertRecordActivity"
            android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name=".activities.ExerciseListActivity">

        </activity>
        <activity android:name=".activities.PersonalExerciseListActivity">

        </activity>

        <activity android:name=".activities.FavoriteExerciseListActivity">

        </activity>

        <activity android:name=".activities.RecommendedExerciseListActivity">

        </activity>

        <activity android:name=".activities.NutritionActivity">

        </activity>

        <activity android:name=".activities.InsertFoodActivity"
            android:windowSoftInputMode="adjustNothing">
        </activity>

        <activity android:name=".activities.InsertShareActivity">

        </activity>

        <activity android:name=".activities.ShareListActivity">
        </activity>

    </application>

</manifest>