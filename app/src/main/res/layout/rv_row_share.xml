<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:descendantFocusability="blocksDescendants"
    >


    <ImageView
        android:id="@+id/imgShare"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_notifications_48px" />

   <TextView
    android:id="@+id/tvUser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/imgShare"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    tools:text="Bakonyi TamÃ¡s"
    android:textSize="@dimen/text_size_small"
    android:gravity="center"
    />

    <TextView
    android:id="@+id/tvDoneExerciseTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/tvUser"
    app:layout_constraintEnd_toStartOf="@id/tvElapsedTime"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    tools:text="Mary"
    android:textSize="@dimen/text_size_small"
    android:gravity="center"
    />

    <TextView
        android:id="@+id/tvElapsedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        tools:text="11:01"
        android:textSize="16sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tvShareDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2018/11/24 22:57"
        android:textSize="@dimen/text_size_comment"
        app:layout_constraintTop_toBottomOf="@id/imgShare"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="290dp"
        android:layout_height="35dp"
        android:maxWidth="300dp"
        app:layout_constraintStart_toEndOf="@id/imgShare"
        app:layout_constraintTop_toBottomOf="@id/tvUser"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:layout_marginStart="@dimen/margin_extra_small"
        android:lines="4"
        tools:text="Proba"
        android:textSize="@dimen/text_size_comment"
        android:gravity="start"
        />

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvElapsedTime"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        />





</android.support.constraint.ConstraintLayout>